{
  "name": "letterparser",
  "version": "0.0.10",
  "description": "Raw e-mail parsing with MIME and plaintext support (isomorphic)",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "keywords": [
    "email",
    "e-mail",
    "mail",
    "mime",
    "mailparser",
    "emailparser",
    "mail-parser",
    "email-parser",
    "e-mail-parser",
    "mime-parser",
    "mime-message",
    "mime-message-parser",
    "parser",
    "typescript",
    "isomorphic"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:cjs && npm run build:esm",
    "build:esm": "tsc --module es2015 --outDir lib/esm",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "test": "jest",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mat-sz/letterparser.git"
  },
  "bugs": {
    "url": "https://github.com/mat-sz/letterparser/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "homepage": "https://github.com/mat-sz/letterparser",
  "author": "Mat Sz <contact@matsz.dev>",
  "license": "BSD-3-Clause-Clear",
  "devDependencies": {
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "base64-js": "^1.5.1",
    "lettercoder": "^0.0.5"
  },
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js",
      "types": "./lib/esm/index.d.ts"
    }
  }
}
